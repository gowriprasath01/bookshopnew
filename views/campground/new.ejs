<% include ../partials/header %>


<div class="container" style="margin-top:10% ;">
    <h1 style="text-align: center;">Create a new Book</h1>
    <form action="/campgrounds" method="post">
    <div style="width: 30%;margin: 0 auto" >
        <div class="form-group">
            <input class="form-control"  type="text" name="Name" placeholder="enter the name of a Book">
        
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="Image" placeholder="enter the image url">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="enter the description for the book">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="enter the price of the book" min="100">
        </div>
        
        <button class="btn btn-block btn-primary">submit</button>
        <a href="/">Go back</a>
    </div>
    
    
</div>


</form>

